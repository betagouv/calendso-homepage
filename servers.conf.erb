upstream app_server {
	server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
}
server {
    server_name _;
    listen <%= ENV['PORT'] %>;
    location /(.*) {
        return 301 <%= ENV['APP_URL'] %>/$1;
    }
    location / {
        if ($uri !~ "^(.*)"){
            return 301 <%= ENV['APP_URL'] %>$request_uri;
        }
        auth_basic           on;
        proxy_pass http://app_server;
        
    }
}