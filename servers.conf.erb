upstream app_server {
	server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
}
server {
    server_name _;
    listen <%= ENV['PORT'] %>;
    location = / {
        auth_basic           on;
        proxy_pass http://app_server;  
    }
    location ^~ /static/ {
        auth_basic           on;
        proxy_pass http://app_server;  
    }
    location ^~ /~/ {
        auth_basic           on;
        proxy_pass http://app_server;  
    }
    location / {
        rewrite ^ <%= ENV['APP_URL'] %> permanent
    }
}