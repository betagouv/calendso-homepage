upstream app_server {
	server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
}
server {
    server_name _;
    listen <%= ENV['PORT'] %>;
    location /(.*) {
        return 301 <%= ENV['APP_URL'] %>/$1;
    }
    location / {
        auth_basic           on;
        proxy_pass http://app_server;
        if ($request_uri !~ "^/(\w+)/\w+$"){
            return 301 <%= ENV['APP_URL'] %>/$1;
        } else {

        }
    }
}