upstream app_server {
	server localhost:<%= ENV["APP_PORT"] %> fail_timeout=0;
}
server {
    server_name _;
    listen <%= ENV['PORT'] %>;
    location = / {
        auth_basic           on;
        proxy_pass http://app_server;  
    }
    location / {
        if ($request_uri) {
            return 301 <%= ENV['APP_URL'] %>$request_uri;
        }
        auth_basic           on;
        proxy_pass http://app_server; 
    }
}